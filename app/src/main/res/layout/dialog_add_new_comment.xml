<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="-30dp"
    android:backgroundTint="@color/textView_select_text_home"
    app:cardCornerRadius="30dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Add New Comment"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/close_ic" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey_color" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="7dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_comment_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start"
                android:hint="@string/leave_your_comment"
                android:maxLines="6"
                android:minLines="6"
                android:padding="15dp"
                android:textColor="@color/editText_comment_bookDetail"
                android:textColorHint="@color/editText_comment_bookDetail"
                android:textSize="14sp"
                android:theme="@style/editText_style" />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_postComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/orange"
            android:letterSpacing="0"
            android:paddingHorizontal="40dp"
            android:paddingVertical="12dp"
            android:text="Post Comment"
            android:textAllCaps="false"
            app:cornerRadius="30dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>